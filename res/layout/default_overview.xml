<?xml version="1.0" encoding="UTF-8"?>
<com.warsong.android.learn.widget.DefaultPullRefreshTopView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/refresh_overView"
    android:background="#f7f7f7">

    <RelativeLayout
        android:id="@+id/framework_pullrefresh_loading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible" >

        <ProgressBar
            android:id="@+id/framework_pullrefresh_progress"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />
        
        <TextView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="loading..."
            android:layout_centerHorizontal="true"
            android:layout_below="@id/framework_pullrefresh_progress"
            android:layout_marginTop="12dp"
            android:textSize="15sp" />
        
<!--         <ImageView android:layout_width="fill_parent" -->
<!--             android:layout_height="wrap_content" -->
<!--             android:layout_below="@id/loading" -->
<!--             android:layout_marginTop="12dp" -->
<!--             android:background="@drawable/pullrefresh_bottom_shadow"/> -->
        
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/framework_pullrefresh_normal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/framework_pullrefresh_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" 
            android:scaleType="center" />
        
        <TextView
            android:id="@+id/framework_pullrefresh_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/framework_pullrefresh_indicator"
            android:layout_marginTop="12dp"
            android:textSize="15sp" />
        
<!--         <ImageView android:layout_width="fill_parent" -->
<!--             android:layout_height="wrap_content" -->
<!--             android:layout_marginTop="12dp" -->
<!--             android:layout_below="@id/framework_pullrefresh_prompt" -->
<!--             android:background="@drawable/pullrefresh_bottom_shadow"/> -->
    </RelativeLayout>
</com.warsong.android.learn.widget.DefaultPullRefreshTopView >
